<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.cas.veritasapp.main.home.rvvm.enrollment.EnrollmentViewModel" />

        <variable
            name="view"
            type="android.view.View" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/personalScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@color/error"
                        android:padding="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@color/textColor"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Sector Classification"
                        android:textColor="@color/whiteTextColor" />

                    <RadioGroup
                        android:id="@+id/sectorClassificationRadioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/publicSectorEmployees"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:checked="@{viewModel.current.employmentObject.sectorClassification.equals(`PU`)}"
                            android:text="Public Sector Employees" />

                        <RadioButton
                            android:id="@+id/privateSectorEmployees"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:checked="@{viewModel.current.employmentObject.sectorClassification.equals(`PR`)}"
                            android:text="Private Sector Employees" />

                        <RadioButton
                            android:id="@+id/microPensionPlan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:checked="@{viewModel.current.employmentObject.sectorClassification.equals(`MP`)}"
                            android:text="Micro Pension Plan" />

                        <RadioButton
                            android:id="@+id/crossBorderEmployees"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:checked="@{viewModel.current.employmentObject.sectorClassification.equals(`CB`)}"
                            android:text="Cross Border Employees" />

                    </RadioGroup>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/textColor"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="IPPIS Details"
                        android:textColor="@color/whiteTextColor" />

                    <RadioGroup
                        android:id="@+id/employeeUnderIPPSRadioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/ippsYes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:checked="@{viewModel.current.employmentObject.employerUnderIPPS.equals(`Yes`)}"
                            android:text="Yes" />

                        <RadioButton
                            android:id="@+id/noYes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:checked="@{viewModel.current.employmentObject.employerUnderIPPS.equals(`No`)}"
                            android:text="No" />

                    </RadioGroup>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:hint="Employeeâ€™s IPPIS No">


                        <EditText
                            android:id="@+id/employeeIPPSNumberEditText"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/rounded_edittext"
                            android:text="@{viewModel.current.employmentObject.employeeIPPSNumber}"
                            android:ems="10"
                            android:inputType="text"
                            tools:ignore="TextFields" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="2dp"
                        android:background="@color/textColor"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Date Employee joined"
                        android:textColor="@color/whiteTextColor" />

                    <com.mikhaellopez.lazydatepicker.LazyDatePicker
                        android:id="@+id/dateJoined"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:textSize="25sp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/rounded_edittext"
                        app:ldp_text_color="@color/textColor"
                        app:ldp_hint_color="@color/grey"
                        app:ldp_date_format="dd-mm-yyyy" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/textColor"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Employment Details"
                        android:textColor="@color/whiteTextColor" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:hint="EmployerName (In Full)">

                        <EditText
                            android:id="@+id/employerFullNameEditText"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/rounded_edittext"
                            android:ems="10"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:hint="Employer Phone number">

                        <EditText
                            android:id="@+id/employerPhoneEditText"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/rounded_edittext"
                            android:ems="10"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/textColor"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Office Address"
                        android:textColor="@color/whiteTextColor" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:hint="Building No./ Name">

                        <EditText
                            android:id="@+id/employeeHoursNumber"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/rounded_edittext"
                            android:ems="10"
                            android:text="@{viewModel.current.employmentObject.houseNumber}"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:hint="Street Name">

                        <EditText
                            android:id="@+id/emloyeeStreeName"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/rounded_edittext"
                            android:text="@{viewModel.current.employmentObject.location.street}"
                            android:ems="10"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:hint="Village /Town/City">

                        <EditText
                            android:id="@+id/employeeCityEditText"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="@{viewModel.current.employmentObject.location.city}"
                            android:background="@drawable/rounded_edittext"
                            android:ems="10"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/textColor"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="State Information"
                        android:textColor="@color/whiteTextColor" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/spinner_border"
                        android:orientation="horizontal">

                        <com.jaredrummler.materialspinner.MaterialSpinner
                            android:id="@+id/countrySpinner"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/spinner_border"
                            android:text="Select Country" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/spinner_border"
                            android:orientation="horizontal">

                            <com.jaredrummler.materialspinner.MaterialSpinner
                                android:id="@+id/stateSpinner"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/spinner_border"
                                android:text="Select State" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/spinner_border"
                            android:orientation="horizontal">

                            <com.jaredrummler.materialspinner.MaterialSpinner
                                android:id="@+id/lgaSpinner"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/spinner_border"
                                android:text="Select LGA" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:hint="Zip Code">

                            <EditText
                                android:id="@+id/employeeZipCodeEditText"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="@drawable/rounded_edittext"
                                android:ems="10"
                                android:text="@{viewModel.current.employmentObject.location.zip_code}"
                                android:inputType="text" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:hint="PO Box">

                            <EditText
                                android:id="@+id/POBoxEditText"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="@drawable/rounded_edittext"
                                android:ems="10"
                                android:text="@{viewModel.current.employmentObject.location.POBox}"
                                android:inputType="text" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/textColor"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Others"
                        android:textColor="@color/whiteTextColor" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:hint="Employee ID/No">

                        <EditText
                            android:id="@+id/employeeCardNoEditText"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/rounded_edittext"
                            android:ems="10"
                            android:text="@{viewModel.current.employmentObject.employerCardId}"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:hint="Nature of Business">

                        <EditText
                            android:id="@+id/natureOfBusinessEditTxt"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/rounded_edittext"
                            android:text="@{viewModel.current.employmentObject.natureOfBusiness}"
                            android:ems="10"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>



                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:hint="Service ID/No (Police and Paramilitary Only)">

                        <EditText
                            android:id="@+id/employeeServiceId"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/rounded_edittext"
                            android:text="@{viewModel.current.employmentObject.serviceId}"
                            android:ems="10"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:hint="Designation /Rank">

                        <EditText
                            android:id="@+id/employeeDesignationEditText"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/rounded_edittext"
                            android:text="@{viewModel.current.employmentObject.designation}"
                            android:ems="10"
                            android:inputType="text" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="2dp"
                            android:background="@color/textColor"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Date of First Appointment (For public sector employees)"
                            android:textColor="@color/whiteTextColor" />

                        <com.mikhaellopez.lazydatepicker.LazyDatePicker
                            android:id="@+id/dateOfFirstAppointment"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:padding="10dp"
                            android:textSize="25sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/rounded_edittext"
                            app:ldp_text_color="@color/textColor"
                            app:ldp_hint_color="@color/grey"
                            app:ldp_date_format="dd-mm-yyyy" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="2dp"
                            android:background="@color/textColor"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Date of Current Employment (For private sector employees ):"
                            android:textColor="@color/whiteTextColor" />

                        <com.mikhaellopez.lazydatepicker.LazyDatePicker
                            android:id="@+id/dateOfCurrentEmployment"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:padding="10dp"
                            android:textSize="25sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/rounded_edittext"
                            app:ldp_text_color="@color/textColor"
                            app:ldp_hint_color="@color/grey"
                            app:ldp_date_format="dd-mm-yyyy" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="2dp"
                            android:background="@color/textColor"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Date of Transfer of Service (ForTreasury Funded FG and State MDAs Employees Only)"
                            android:textColor="@color/whiteTextColor" />

                        <com.mikhaellopez.lazydatepicker.LazyDatePicker
                            android:id="@+id/dateOfTransferService"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:padding="10dp"
                            android:textSize="25sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/rounded_edittext"
                            app:ldp_text_color="@color/textColor"
                            app:ldp_hint_color="@color/grey"
                            app:ldp_date_format="dd-mm-yyyy" />
                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/saveBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/buttonshape"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </ScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>