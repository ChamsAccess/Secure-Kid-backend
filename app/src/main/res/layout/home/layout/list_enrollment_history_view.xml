<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/row_height"
    android:background="@color/whiteTextColor"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fullNameTxtView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:textColor="@color/colorPrimaryText"
            tools:text="Funmi Ayinde" />

<!--        <TextView-->
<!--            android:id="@+id/fullNameTxtView"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_below="@+id/nameTxtView"-->
<!--            android:layout_marginLeft="50dp"-->
<!--            android:text="12-Jan-2021" />-->

    </RelativeLayout>



    <TextView
        android:id="@+id/createdAt"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:textColor="@color/colorPrimaryText"
        tools:text="12-Jan-2021" />

    <TextView
        android:id="@+id/registrationStatusTextView"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:textColor="@color/colorPrimaryText"
        tools:text="Africa" />

    <TextView
        android:id="@+id/rsaPinStatus"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:textColor="@color/colorPrimaryText"
        tools:text="PEN12335262" />

    <Button
        android:id="@+id/editBtn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/edittextstyle"
        android:checked="false"
        android:gravity="center"
        android:text="Edit"
        android:textColor="@color/whiteTextColor" />
</LinearLayout>